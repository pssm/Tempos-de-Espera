<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="pedromendes.tempodeespera.HospitalDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPallete2"
            android:background="@color/colorPallete3"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:paddingTop="@dimen/activity_header_top_padding"
            android:paddingBottom="@dimen/activity_header_bottom_padding"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!--<TextView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="@dimen/top_padding"-->
        <!--android:paddingBottom="@dimen/bottom_padding"-->
        <!--android:paddingLeft="@dimen/left_padding"-->
        <!--android:paddingRight="@dimen/right_padding"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:id="@+id/hospitalDescription" />-->

        <TextView
            android:id="@+id/hospitalAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:paddingTop="@dimen/top_padding"
            android:textColor="@color/colorPallete4"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/hospitalPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:paddingTop="@dimen/top_padding"
            android:phoneNumber="true"
            android:text="@string/phone"
            android:textColor="@color/colorPallete4"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/no_available_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:textColor="@color/colorPriority0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/emergencies_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
