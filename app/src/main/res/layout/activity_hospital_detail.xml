<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="pedromendes.tempodeespera.HospitalDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPallete3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingBottom="@dimen/activity_header_bottom_padding"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="@dimen/right_padding"
                android:paddingTop="@dimen/activity_header_top_padding"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPallete2"
                android:layout_weight="1"/>

            <CheckBox
                android:id="@+id/toggleButton"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/hospitalAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:paddingTop="@dimen/top_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPalette4"
            android:textIsSelectable="true" />


        <Button
            android:id="@+id/hospitalPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin_top"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:paddingTop="@dimen/top_padding"
            android:text="@string/phone"
            android:textAppearance="?android:attr/textAppearanceSmall" />


        <TextView
            android:id="@+id/no_available_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/left_padding"
            android:paddingRight="@dimen/right_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPriority0"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/emergencies_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
